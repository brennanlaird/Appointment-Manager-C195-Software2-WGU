<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="464.0" prefWidth="423.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.addCustomer">
   <children>
      <HBox layoutX="29.0" layoutY="71.0" prefHeight="41.0" prefWidth="436.0">
         <children>
            <Label prefWidth="125.0" text="Customer ID" />
            <TextField fx:id="idTextBox" disable="true" prefWidth="125.0" promptText="Autogenerated" />
         </children>
      </HBox>
      <HBox layoutX="29.0" layoutY="154.0" prefHeight="41.0" prefWidth="436.0">
         <children>
            <Label prefWidth="125.0" text="Address" />
            <TextField fx:id="addressTextBox" prefWidth="250.0" />
         </children>
      </HBox>
      <HBox layoutX="29.0" layoutY="195.0" prefHeight="41.0" prefWidth="436.0">
         <children>
            <Label prefWidth="125.0" text="Address (optional)" />
            <TextField fx:id="address2TextBox" prefWidth="250.0" />
         </children>
      </HBox>
      <HBox layoutX="29.0" layoutY="236.0" prefHeight="41.0" prefWidth="436.0">
         <children>
            <Label fx:id="postCodeLabel" prefWidth="125.0" text="Postal Code" />
            <TextField fx:id="postCodeTextBox" prefWidth="125.0" />
         </children>
      </HBox>
      <HBox layoutX="29.0" layoutY="277.0" prefHeight="41.0" prefWidth="436.0">
         <children>
            <Label fx:id="phoneLabel" prefWidth="125.0" text="Phone" />
            <TextField fx:id="phoneTextBox" prefWidth="175.0" />
         </children>
      </HBox>
      <HBox layoutX="29.0" layoutY="318.0" prefHeight="41.0" prefWidth="436.0">
         <children>
            <Label fx:id="countryLabel" prefWidth="125.0" text="Country" />
            <ComboBox fx:id="countryCombo" onAction="#countryComboChange" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox layoutX="29.0" layoutY="359.0" prefHeight="41.0" prefWidth="436.0">
         <children>
            <Label fx:id="firstLevelLabel" disable="true" prefWidth="125.0" text="First Level Division" />
            <ComboBox fx:id="firstLevelCombo" disable="true" prefWidth="150.0" promptText="Select country first" />
         </children>
      </HBox>
      <Label layoutX="159.0" layoutY="27.0" text="Add Customer">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <HBox layoutX="29.0" layoutY="427.0" prefHeight="64.0" prefWidth="436.0">
         <children>
            <Button fx:id="clearFormButton" mnemonicParsing="false" onAction="#clearFormButtonClick" text="Clear Form">
               <HBox.margin>
                  <Insets right="100.0" />
               </HBox.margin></Button>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonClick" text="Save Customer">
               <HBox.margin>
                  <Insets right="100.0" />
               </HBox.margin></Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonClick" text="Cancel" />
         </children>
      </HBox>
      <HBox layoutX="27.0" layoutY="111.0" prefHeight="41.0" prefWidth="436.0">
         <children>
            <Label prefWidth="125.0" text="Customer Name" />
            <TextField fx:id="customerNameBox" prefHeight="28.0" prefWidth="250.0" />
         </children></HBox>
   </children>
</AnchorPane>
